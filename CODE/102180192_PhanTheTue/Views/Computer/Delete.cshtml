@model _102180192_PhanTheTue.Models.Computer

<form method="post" asp-action="DeletePost">
    <input asp-for="id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Remove Computer</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="name" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="type"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="type" disabled class="form-control"/>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-6 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-80" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-80">
                                <i class="fas fa-sign-out-alt"></i>
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{

@{
    <partial name="_ValidationScriptsPartial" />
}

}